{
  "name": "ai-agent-frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "npm exec vite --",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "dev:electron": "concurrently -k \"npm:dev\" \"wait-on tcp:5173 && electron .\"",
    "build:electron:renderer": "cross-env VITE_ROUTER_MODE=hash VITE_BASE_PATH=./ tsc --noEmit && vite build",
    "pack:electron": "npm run build:electron:renderer && electron-builder --dir",
    "build:electron": "npm run build:electron:renderer && electron-builder --win nsis"
  },
  "dependencies": {
    "@babel/runtime": "^7.27.0",
    "@tanstack/react-query": "^5.66.8",
    "antd": "^5.24.2",
    "framer-motion": "^12.34.2",
    "lucide-react": "^0.575.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.30.1",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "typescript": "^5.8.2",
    "vite": "^5.4.14",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.aiagent.desktop",
    "productName": "AI Agent",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "AI-Agent-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
